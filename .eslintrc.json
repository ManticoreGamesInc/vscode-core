{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "**/dist/*.js"
    ],
    "rules": {
        "@typescript-eslint/class-name-casing": "off",
        "@typescript-eslint/semi": "off",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off",
        "no-extra-semi": "off",
        "@typescript-eslint/no-extra-semi": "warn"
    }
}
