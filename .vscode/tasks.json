// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "label": "npm: watch",
            "isBackground": true,
            "problemMatcher": "$esbuild-watch",
            "group": "build",
        },
        {
            "type": "npm",
            "script": "build",
            "label": "npm: build",
            "problemMatcher": "$esbuild",
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "test",
            "label": "npm: test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "node ./out/test/runTest.js"
        },
        {
            "type": "npm",
            "script": "lint",
            "label": "npm: lint",
            "problemMatcher": [],
            "detail": "eslint src --ext .js,.jsx,.ts,.tsx"
        }
    ]
}
