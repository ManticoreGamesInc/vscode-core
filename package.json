{
  "name": "vscode-core",
  "displayName": "Core Lua API",
  "description": "Adds support for the Core Games Lua API",
  "license": "MIT",
  "version": "1.9.2",
  "icon": "images/logo.png",
  "publisher": "ManticoreGames",
  "repository": {
    "type": "git",
    "url": "https://github.com/ManticoreGamesInc/vscode-core"
  },
  "bugs": {
    "url": "https://github.com/ManticoreGamesInc/vscode-core/issues"
  },
  "galleryBanner": {
    "color": "#1A1E26",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.58.1"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "extensionDependencies": [
    "sumneko.lua"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify && cp -r ./src/EmmyLua ./out/EmmyLua",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run -S esbuild-base -- --sourcemap",
    "watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "test": "node ./out/test/runTest.js",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "changelog": "auto-changelog --template keepachangelog --hide-credit --commit-limit false"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.15",
    "@types/vscode": "1.58.1",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@typescript-eslint/typescript-estree": "^5.35.1",
    "chai": "^4.3.6",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "vscode-test": "^1.6.1"
  }
}