{
  "name": "vscode-core",
  "displayName": "Core Lua API",
  "description": "Adds support for the Core Games Lua API",
  "license": "MIT",
  "version": "1.7.1",
  "icon": "images/logo.png",
  "publisher": "ManticoreGames",
  "repository": {
    "type": "git",
    "url": "https://github.com/ManticoreGamesInc/vscode-core"
  },
  "bugs": {
    "url": "https://github.com/ManticoreGamesInc/vscode-core/issues"
  },
  "galleryBanner": {
    "color": "#1A1E26",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.58.1"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "extensionDependencies": [
    "sumneko.lua"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify && cp -r ./src/EmmyLua ./out/EmmyLua",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run -S esbuild-base -- --sourcemap",
    "watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "test": "node ./out/test/runTest.js",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "changelog": "auto-changelog --template keepachangelog --hide-credit --commit-limit false"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.1",
    "@types/vscode": "1.58.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.0",
    "@typescript-eslint/typescript-estree": "^4.31.0",
    "chai": "^4.3.4",
    "esbuild": "^0.12.27",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "vscode-test": "^1.6.1"
  }
}
